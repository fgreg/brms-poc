rule "set flag"

agenda-group "Set Price Flag"
dialect "java"
lock-on-active true
when
   $proces : WorkflowProcessInstance()
then 
        $proces.setVariable("validCount", (Integer) $proces.getVariable("validCount") + new Integer(1));    
        update($proces); 
        System.out.println ("Incremented counter by 1 ");

end
